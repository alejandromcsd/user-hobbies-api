{
  "name": "user-hobbies-api",
  "version": "0.0.1",
  "description": "",
  "author": "alejandromcsd",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "start": "ts-node ./src/main.ts",
    "start:debug": "nodemon",
    "tsc": "tsc",
    "build:prod": "npm run build",
    "start:prod": "node dist/src/main.js",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "DOTENV_CONFIG_PATH=./env.test jest",
    "test:watch": "DOTENV_CONFIG_PATH=./env.test jest --watch",
    "test:cov": "DOTENV_CONFIG_PATH=./env.test jest --coverage",
    "test:debug": "DOTENV_CONFIG_PATH=./env.test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "DOTENV_CONFIG_PATH=./env.test jest --config ./test/jest-e2e.json",
    "db:rollback": "dotenv -- node_modules/.bin/knex migrate:rollback",
    "db:migrate:make": "dotenv -- node_modules/.bin/knex migrate:make",
    "db:migrate:run": "dotenv -- node_modules/.bin/knex migrate:latest",
    "db:migrate:run:test": "dotenv -- node_modules/.bin/knex migrate:latest --env test",
    "db:seed:make": "dotenv -- node_modules/.bin/knex seed:make",
    "db:seed:run": "dotenv -- node_modules/.bin/knex seed:run"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.0.9",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^10.0.0",
    "dotenv-cli": "^4.0.0",
    "express": "^4.17.1",
    "knex": "^0.95.11",
    "moment": "^2.29.1",
    "nest-knexjs": "0.0.6",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.1.6",
    "url-join-ts": "^1.0.5",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.28.2",
    "@typescript-eslint/parser": "^4.28.2",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.12",
    "prettier": "^2.3.2",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}